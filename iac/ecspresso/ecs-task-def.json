{
  "containerDefinitions": [
    {
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `M_AWS_ACCOUNT_ID` }}.dkr.ecr.ap-northeast-1.amazonaws.com/yassan-fa-ac-repository:5396017",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/yassan-fa-ac-task",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "name": "app",
      "portMappings": [
        {
          "appProtocol": "",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ]
    },
    {
      "cpu": 0,
      "essential": true,
      "image": "public.ecr.aws/aws-appconfig/aws-appconfig-agent:2.x",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/yassan-fa-ac-task",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "name": "appconfig-agent",
      "portMappings": [
        {
          "appProtocol": "",
          "containerPort": 2772,
          "hostPort": 2772,
          "protocol": "tcp"
        }
      ]
    }
  ],
  "cpu": "512",
  "executionRoleArn": "arn:aws:iam::{{ must_env `M_AWS_ACCOUNT_ID` }}:role/ecsTaskExecutionRole",
  "family": "yassan-fa-ac-task",
  "ipcMode": "",
  "memory": "1024",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "tags": [
    {
      "key": "DoNotNuke",
      "value": "true"
    }
  ],
  "taskRoleArn": "arn:aws:iam::{{ must_env `M_AWS_ACCOUNT_ID` }}:role/ecsTaskRole"
}
